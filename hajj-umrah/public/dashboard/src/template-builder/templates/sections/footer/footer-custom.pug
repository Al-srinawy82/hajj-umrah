    li.nav-item
      a.nav-link.text-muted(href='#') Terms of use
    li.nav-item
      a.nav-link.text-muted(href='#') Privacy Policy
    li.dropdown.dropdown-language.nav-item
      a#dropdown-curr.dropdown-toggle.nav-link(href='#', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
