        a.dropdown-item(href='#')
          i.fa.fa-pound-sign
          |  GBP
        a.dropdown-item(href='#')
          i.fa.fa-euro-sign
          |  EUR
        a.dropdown-item(href='#')
          i.fa.fa-bitcoin
          |  BTC
        a.dropdown-item(href='#')
          i.fa.fa-rupee-sign
          |  INR
